@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@ViewBag.SeriesTitle</h1>
        <h2>Issue #@ViewBag.IssueNumber</h2>


        <h5>Description:</h5>
        <div>@Html.Raw(ViewBag.Description)</div>

        @{ var artists = ViewBag.Artists; }

        @if (artists.Length > 0) {
            <h5>Artists:</h5>
            <div>
                <ul type="disc">
                @foreach (var artist in artists) {
                    <li>@artist</li>
                }
                </ul>
            </div>
        }

    </div>
</body>
</html>
