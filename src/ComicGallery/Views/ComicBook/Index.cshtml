@model ComicGallery.Models.ComicBook[]

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var comicBook in Model) {
    <div class="col-md-3">
        <h4>@comicBook.DisplayText</h4>
        <img src="/Images/@comicBook.CoverImageFile"
             alt="@comicBook.DisplayText"
             class="img-responsive" />
    </div>
    }
</div>
